.form-group.mb-3
  = f.label "Country", class: 'form-label'
  = f.text_field :country, autofocus: true, class: 'form-control',
      id: 'country-select'
.form-group.mb-3
  = f.label "Organization", class: "required form-label"
  = f.text_field :organization, autofocus: true, class: 'form-control',
      id: 'organization-select', required: true, disabled: disabled
.form-group.mb-3
  = f.label "Department", class: 'form-label'
  = f.text_field :department, autofocus: true, class: 'form-control',
      id: 'department-select'
.form-group.mb-3
  = f.label "Working group", class: 'form-label'
  = f.text_field :group, autofocus: true, class: 'form-control',
      id: 'group-select'
