span.pseudo-link {
  cursor:pointer;
  color: $link-color;
}

span.pseudo-link:hover {
  text-decoration:underline;
}

.nav-tabs > li > a {
  margin-right: 0px;
}

.small-col {
  float: left;
  padding-left: 6px !important;
  padding-right: 0px !important;
}

.no-pad-col {
  padding-left: 0px !important;
  padding-right: 0px !important;
}

.main-content {
  float: none;
  overflow: hidden;
  min-height: 350px;
}


.full-main {
  width: 99%;
}

.collection-tree {
  max-width: 15%;
  margin-left: 3px;
}

// icon for research plan. just a standard FontAwesome icon
$font-icons-research_plan: "\f0f6";

.icon-research_plan {
  font-style: inherit;
}
.icon-research_plan:before {
  font-family: FontAwesome;
  content: "\f0f6";
}

.icon-cell_line {
  font-style: inherit;
}
.icon-cell_line:before {
  font-family: FontAwesome;
  content: "\f0a3";
}

.importChemDrawModal {
  width: 98%;
  height: 97%;
  top: 47%;


  .modal-dialog {
    top: 47%;
  }

  .modal-content {
    height: 100%;

    .modal-body {
      height: 92%;
    }
  }

  ::-webkit-scrollbar {
  background: transparent;
  overflow: visible;
  width: 17px;
  }

  ::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.2);
  border: solid $white;
  }

  ::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.8);
  }

  ::-webkit-scrollbar-thumb:horizontal {
  border-width: 4px 6px;
  min-width: 40px;
  }

  ::-webkit-scrollbar-thumb:vertical {
  border-width: 6px 4px;
  min-height: 40px;
  }

  ::-webkit-scrollbar-track-piece {
  background-color: $white;
  }

  ::-webkit-scrollbar-corner {
  background: transparent;
  }

  ::-webkit-scrollbar-thumb {
  background-color: $gray-500;
  -webkit-box-shadow: inset 1px 1px 0 rgba(0,0,0,0.10),inset 0 -1px 0 rgba(0,0,0,0.07);
  }

  ::-webkit-scrollbar-thumb:hover {
  background-color: $gray-600;
  }
}

