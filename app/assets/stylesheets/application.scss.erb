.navbar-custom {
  border-radius: 0;
  background-color: #EFEFEF;

  a.dropdown-toggle:hover {
    color: black;
  }
}
.custom-modal {
  width: 100%;
}

.modal-container {
  position: relative;
}
.modal-container .modal, .modal-container .modal-backdrop {
  position: absolute;
}


#app {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.table.borderless td, .table.borderless th {
  border: 0;
}

.panel-fixed {
  overflow-y: auto;
  max-height: 100vh;

  button.btn-danger {
    position: relative;
    margin-right: 5px;
  }
}

.panel-fixed::-webkit-scrollbar {
  width: 0px;  /* remove scrollbar space */
  background: transparent;  /* optional: just make scrollbar invisible */
}

.panel-detail {
  max-height: calc(100vh - 150px);
}

.panel-detail > .panel-body {
  overflow-y: auto;
  max-height: calc(100vh - 220px);
}

.panel-fit-screen {
  overflow-y: scroll;
  max-height: calc(100vh - 220px);
}

@media screen and (min-width: 1367px) {
  .hidden-hd {
    display: none !important;
  }
}

@media screen and (max-width: 1366px) {
  .visible-hd {
    display: none !important;
  }
}

span.pseudo-link {
  cursor:pointer;
  color: #337ab7;
}

span.pseudo-link:hover {
  text-decoration:underline;
}

.nav-tabs > li > a {
  margin-right: 0px;
}

.small-col {
  float: left;
  padding-left: 6px !important;
  padding-right: 6px !important;
}

.no-pad-col {
  padding-left: 0px !important;
  padding-right: 0px !important;
}

.main-content {
  width: 83%
}

.full-main {
  width: 98%
}

.collec-tree {
  width: 15%
}

// icon for research plan. just a standard FontAwesome icon
$font-icons-research_plan: "\f0f6";

.icon-research_plan {
  font-style: inherit;
}
.icon-research_plan:before {
  font-family: FontAwesome;
  content: "\f0f6";
}

.exportModal {
   width: 60%;
   height: auto;
}
