 @import "bootstrap-sprockets";
 @import "bootstrap";
 @import "icons";
 @import "font-awesome";
 @import "autocomplete";

 <%Bundler.load.current_dependencies.select{|dep| dep.groups.include?(:plugins)}.map(&:name).each do |plugin|%>
 @import "<%=plugin%>";
 <%end%>

label.required:after {
  content: " *";
}

.navbar-custom {
  border-radius: 0;
  background-color: #EFEFEF;

  a.dropdown-toggle:hover {
    color: black;
  }
}
.custom-modal {
  width: 100%;
}

.modal-container {
  position: relative;
}
.modal-container .modal, .modal-container .modal-backdrop {
  position: absolute;
}


#app {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.table.borderless td, .table.borderless th {
  border: 0;
}

.panel-fixed {
  overflow-y: auto;
  max-height: 100vh;

  button.btn-danger {
    position: relative;
    margin-right: 5px;
  }
}

.panel-fixed::-webkit-scrollbar {
  width: 0px;  /* remove scrollbar space */
  background: transparent;  /* optional: just make scrollbar invisible */
}

.panel-detail {
  max-height: calc(100vh - 150px);
  .wellplate-detail {
    width: 980px;
  }
}

.panel-detail > .panel-body {
  overflow-y: auto;
  max-height: calc(100vh - 220px);
}

.panel-fit-screen {
  overflow-y: scroll;
  max-height: calc(100vh - 320px);
}

.btn-unified {
  color: #fff;
  background-color: #777777;
  border-color: #555555;

}
.dropdown > .btn-unified ~ .btn {
  color: #fff;
  background-color: #777777;
  border-color: #555555;
}

@media screen and (min-width: 1367px) {
  .hidden-hd {
    display: none !important;
  }
}

<%# @media screen and (max-width: 1366px) { %>
<%#   .visible-hd { %>
<%#     display: none !important; %>
<%#   } %>
<%# } %>

span.pseudo-link {
  cursor:pointer;
  color: #337ab7;
}

span.pseudo-link:hover {
  text-decoration:underline;
}

.nav-tabs > li > a {
  margin-right: 0px;
}

.small-col {
  float: left;
  padding-left: 6px !important;
  padding-right: 0px !important;
}

.no-pad-col {
  padding-left: 0px !important;
  padding-right: 0px !important;
}

.main-content {
  float: none;
  overflow: hidden;
  min-height: 350px;
}

.full-main {
  width: 99%;
}

.collec-tree {
  width: 15%;
  margin-left: 3px;
}

// icon for research plan. just a standard FontAwesome icon
$font-icons-research_plan: "\f0f6";

.icon-research_plan {
  font-style: inherit;
}
.icon-research_plan:before {
  font-family: FontAwesome;
  content: "\f0f6";
}

.exportModal {
   width: 60%;
   height: auto;
}

.importChemDrawModal {
  width: 98%;
  height: 90%;
  top: 45%;

  .chemscannerModal {
    height: 100%;
    margin-bottom: 10px;
    overflow-y: scroll;
  }

  .chemscanner-files-menu {
    max-height: 100%;
    overflow-y: unset;
    width: auto;
  }

  .chemscanner-files-contents {
    max-height: 100%;
    overflow-y: unset;
  }

  .modal-dialog {
    top: 47%;
  }

  .modal-content {
    height: 100%;

    .modal-body {
      height: 92%;
    }
  }

  ::-webkit-scrollbar {
  background: transparent;
  overflow: visible;
  width: 17px;
  }

  ::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.2);
  border: solid #fff;
  }

  ::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.8);
  }

  ::-webkit-scrollbar-thumb:horizontal {
  border-width: 4px 6px;
  min-width: 40px;
  }

  ::-webkit-scrollbar-thumb:vertical {
  border-width: 6px 4px;
  min-height: 40px;
  }

  ::-webkit-scrollbar-track-piece {
  background-color: #fff;
  }

  ::-webkit-scrollbar-corner {
  background: transparent;
  }

  ::-webkit-scrollbar-thumb {
  background-color: #ADADAD;
  -webkit-box-shadow: inset 1px 1px 0 rgba(0,0,0,0.10),inset 0 -1px 0 rgba(0,0,0,0.07);
  }

  ::-webkit-scrollbar-thumb:hover {
  background-color: #999;
  }
}

tr.strokeout  td {
    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVQIW2NkYGCQBAAAIwAbDJgTxgAAAABJRU5ErkJggg==');
    background-repeat: repeat-x;
    background-position: 50% 40%;
}

.noticeModal {
   width: 60%;
   height: auto;
   margin: unset !important;
   .modal-header {
     padding: 10px;
   }
   .modal-body {
     padding: 5px;
   }
   .modal-content {
     height: 100%;
     .modal-body {
       height: 70vh;
     }
   }
   .panel-heading {
     padding: 5px 5px;
   }
   .panel-title {
     font-size: 14px;
     font-family: "Helvetica Neue", Helvetica, Arial, sans-serif, FontAwesome;
   }
   .panel-body {
     word-break: break-all;
     padding: 0px;
     border-top-color: transparent !important;
     white-space: pre-line;
   }
}
